{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "downlevelIteration": true,
        "moduleResolution": "node",
        "isolatedModules": false,
        "sourceMap": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "noImplicitThis": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist"
    ]
}
